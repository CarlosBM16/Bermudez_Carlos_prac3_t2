<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ejercicio1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Fondo -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Texto principal y secundario -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/midGrey</item>

        <!-- Iconos -->
        <item name="colorControlNormal">@color/midGrey</item>
        <item name="colorControlActivated">@color/strongBlue</item>

        <item name="colorPrimary">@color/strongRed</item>
    </style>

    <!-- Botones -->
    <style name="GreyButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/lightGrey</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="ChangeButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#80D32F2F</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <!-- Estilo para iconos grises -->
    <style name="IconGrey">
        <item name="tint">@color/midGrey</item>
    </style>

    <!-- Estilo para EditText -->
    <style name="EditTextStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/midGrey</item> <!-- borde normal -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/midGrey</item>
    </style>

    <style name="BoldTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/midGrey</item>
    </style>

    <!-- Tema final -->
    <style name="Theme.Ejercicio1" parent="Base.Theme.Ejercicio1" />
</resources>
